<UserControl
    x:Class="PrismDemo.PhotoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PrismDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="200">
    
    <Grid Margin="5,10,5,10" Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Image Name="img" Source="" Stretch="UniformToFill"/>
        <TextBlock TextTrimming="CharacterEllipsis" FontSize="{StaticResource TextStyleMediumFontSize}" Grid.Row="1" HorizontalAlignment="Center" Text="" Name="title" Foreground="White"/>

    </Grid>
</UserControl> 

